{
  "name": "webssh2_client",
  "version": "0.2.31-alpha.4",
  "ignore": [
    ".gitignore"
  ],
  "description": "A client for the webssh2 gateway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billchurch/webssh2_client.git"
  },
  "main": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "client/index.js",
    "client/public/**/*"
  ],
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "cd client/src && vite build --mode production",
    "builddev": "cd client/src && vite build --mode development",
    "dev": "cd client/src && vite --mode development",
    "watch": "cd client/src && vite --mode development",
    "analyze": "cd client/src && vite build --mode production && vite-bundle-visualizer",
    "typecheck": "tsc -b --pretty --noEmit",
    "typecheck:client": "tsc -p client/tsconfig.json --pretty --noEmit",
    "release": "standard-version -a -s",
    "publish:dry-run": "npm publish --dry-run",
    "publish:npm": "npm publish",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch"
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm run build",
      "precommit": "git add client/public/*"
    }
  },
  "author": "",
  "license": "SEE LICENSE IN FILE - LICENSE",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "conventional-changelog-cli": "^5.0.0",
    "debug": "^4.4.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^26.1.0",
    "lucide-static": "^0.542.0",
    "prettier": "^3.6.2",
    "purecss": "^3.0.0",
    "socket.io-client": "^4.8.1",
    "standard-version": "^9.5.0",
    "vite": "^7.1.4",
    "vite-bundle-visualizer": "^1.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "ignore": [
      "client/public/**/*"
    ]
  },
  "dependencies": {
    "jsmasker": "^2.0.0"
  }
}
